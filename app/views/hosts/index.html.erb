<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>State</th>
          <th>Services</th>
        </tr>
      </thead>
      <tbody>
        <% @hosts.each do |host| %>
          <tr>
            <td><%= link_to host.name, host_path(host.id) %></td>
            <td><%= host_state(host.state) %></td>
            <td><%= service_state(host.worst_service_state) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
